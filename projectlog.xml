<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
    <name>COM_PROJECTLOG</name>
    <creationDate>July 2014</creationDate>
    <author>The Thinkery</author>
    <authorEmail>info@thethinkery.net</authorEmail>
    <authorUrl>http://www.thethinkery.net</authorUrl>
    <copyright>Copyright (C) 2009 - 2014 The Thinkery LLC. All rights reserved.</copyright>
    <license>GNU/GPL</license>
    <version>3.3.1</version>
    <description></description>
    <scriptfile>installfile.php</scriptfile>

    <files folder="site">
        <filename>controller.php</filename>        
        <filename>index.html</filename>
        <filename>projectlog.php</filename>
        <folder>assets</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <media folder="media/com_projectlog" destination="com_projectlog">
		<filename>index.html</filename>
        <folder>docs</folder>
	</media>
    
    <languages>
        <language tag="en-GB">languages/site/en-GB/en-GB.com_projectlog.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.projectlog.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.projectlog.sql</file>
        </sql>
    </uninstall>
    
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    
    <administration>
        <menu img="components/com_projectlog/assets/images/icon-16-projectlog.png" view="projects" link="option=com_projectlog">COM_PROJECTLOG</menu>
		<submenu>
			<menu img="components/com_projectlog/assets/images/icon-16-projectlog.png" view="projects">COM_PROJECTLOG_PROJECTS</menu>
            <menu img="components/com_projectlog/assets/images/icon-16-projectlog.png" view="categories">COM_PROJECTLOG_CATEGORIES</menu>
            <menu img="components/com_projectlog/assets/images/icon-16-projectlog.png" view="logs">COM_PROJECTLOG_LOGS</menu>
            <menu img="components/com_projectlog/assets/images/icon-16-projectlog.png" view="docs">COM_PROJECTLOG_DOCS</menu>
            <menu img="components/com_projectlog/assets/images/icon-16-projectlog.png" view="groups">COM_PROJECTLOG_GROUPS</menu>
		</submenu>
        <files folder="admin">
            <filename>access.xml</filename>            
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>projectlog.php</filename>
            <folder>assets</folder>
            <folder>classes</folder>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>            
        </files> 
        <languages>
            <language tag="en-GB">languages/admin/en-GB/en-GB.com_projectlog.ini</language>
            <language tag="en-GB">languages/admin/en-GB/en-GB.com_projectlog.sys.ini</language>
        </languages>
    </administration> 
    
    <!-- Modules here -->
    <modules />   
    
    <!-- Plugins here -->
    <plugins />
    
    <!-- Update servers here -->
    <!--<updateservers>
        <server type="extension" priority="1" name="Intellectual Property Update Server">http://extensions.thethinkery.net/iproperty.xml</server>
    </updateservers>-->
</extension>