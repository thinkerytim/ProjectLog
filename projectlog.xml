<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
    <name>Project Log</name>
    <creationDate>March 15, 2009</creationDate>
    <author>The Thinkery</author>
    <authorEmail>info@thethinkery.net</authorEmail>
    <authorUrl>http://www.thethinkery.net</authorUrl>
    <copyright>Copyright 2009 The Thinkery LLC. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.5.1</version>
    <description>A project log component to keep track of current projects. Users can add project logs, upload documents to attach to projects, and manage projects from the front-end of the website.</description>
    <installfile>install.projectlog.php</installfile>
    <uninstallfile>uninstall.projectlog.php</uninstallfile>

    <files folder="site">
        <filename>controller.php</filename>        
        <filename>index.html</filename>
        <filename>projectlog.php</filename>
        <folder>css</folder>
        <folder>helpers</folder>
        <folder>images</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <media folder="media/com_projectlog" destination="com_projectlog">
		<filename>index.html</filename>
        <filename>docs/index.html</filename>
	</media>

    <params>
    </params>

    <languages>
        <language tag="en-GB">languages/site/en-GB/en-GB.com_projectlog.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install.projectlog.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">uninstall.projectlog.sql</file>
        </sql>
    </uninstall>

    <administration>
        <menu>Project Log</menu>
        <files folder="admin">
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>install.projectlog.sql</filename>
            <filename>projectlog.php</filename>
            <filename>uninstall.projectlog.sql</filename>
            <folder>images</folder>
            <folder>views</folder>
        </files> 
        <languages>
            <language tag="en-GB">languages/admin/en-GB/en-GB.com_projectlog.ini</language>
        </languages>
    </administration> 
</install>