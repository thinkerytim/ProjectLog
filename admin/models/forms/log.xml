<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_projectlog/models/fields">
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="title"
			type="text"
			label="COM_PROJECTLOG_FIELD_NAME_LABEL"
			description="COM_PROJECTLOG_FIELD_NAME_DESC"
			class="input-xxlarge input-large-text"
			size="40"
			required="true"
		 />
        
        <field name="project_id"
			type="modal_project"
			label="COM_PROJECTLOG_FIELD_PROJECT_LABEL"
			description="COM_PROJECTLOG_FIELD_PROJECT_DESC"
			required="true"
		/>
        
        <field name="description" type="textarea"
            class="span6"
			label="COM_PROJECTLOG_FIELD_INFORMATION_MISC_LABEL"
			description="COM_PROJECTLOG_FIELD_INFORMATION_MISC_DESC"
            rows="8"
			 />

		<field id="published"
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>

		</field>	

		<field name="created_by" type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="COM_PROJECTLOG_FIELD_CREATED_BY_DESC" />

		<field name="created_by_alias" type="text"
			label="COM_PROJECTLOG_FIELD_CREATED_BY_ALIAS_LABEL" description="COM_PROJECTLOG_FIELD_CREATED_BY_ALIAS_DESC"
			size="20" />

		<field name="created" type="calendar" label="COM_PROJECTLOG_FIELD_CREATED_LABEL"
			description="COM_PROJECTLOG_FIELD_CREATED_DESC" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_PROJECTLOG_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"/>

		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		 />

		<field name="ordering"
			type="ordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
            content_type="com_projectlog.project"
		/>

		<field name="publish_up" type="calendar"
			label="COM_PROJECTLOG_FIELD_PUBLISH_UP_LABEL" description="COM_PROJECTLOG_FIELD_PUBLISH_UP_DESC"
			format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc"
		/>

		<field name="publish_down" type="calendar"
			label="COM_PROJECTLOG_FIELD_PUBLISH_DOWN_LABEL" description="COM_PROJECTLOG_FIELD_PUBLISH_DOWN_DESC"
			format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc"
		/>

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_PROJECTLOG_FIELD_LANGUAGE_DESC"
		>
			<option value="*">JALL</option>
		</field>     
	</fieldset>
</form>
